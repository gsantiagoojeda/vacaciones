<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="24dp"
    tools:context=".login.hv.HVDetails"
    android:background="@color/white">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <ImageView
                android:id="@+id/BtnBack"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:src="@drawable/baseline_arrow_back_24"
                app:tint="@color/color_fondo_azul" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:text="Detalles de mi solicitud"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />





        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:text="Fecha de inicio"
            android:textColor="@color/black"

            android:textSize="16sp" />

        <TextView
            android:id="@+id/TVDS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/color_fondo_azul"
            android:textSize="17sp"
            tools:text="lunes 18-12-2024" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Fecha final"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/TVDE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/color_fondo_azul"
            android:textSize="17sp"
            tools:text="lunes 18-12-2024" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Días totales"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/TVDT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/color_fondo_azul"
            android:textSize="17sp"
            tools:text="4.5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Estado de autorización"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/TVSA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/color_fondo_azul"
            android:textSize="17sp"
            tools:text="Pendiente" />

        <TextView
            android:id="@+id/titleTVA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Autorizador"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/TVA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/color_fondo_azul"
            android:textSize="17sp"
            tools:text="Marco Antonio Arrieta Pérez" />

        <TextView
            android:id="@+id/titleTVDA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Fecha de autorización"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/TVDA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/color_fondo_azul"
            android:textSize="17sp"
            tools:text="10-01-98 14:02" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Tipo de Solicitud"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/TVTS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/color_fondo_azul"
        android:textSize="17sp"
        tools:text="VACACIONES" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Observaciones"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/Observaciones"
            android:layout_height="wrap_content"
            android:layout_width="300dp"
            android:textSize="18dp"
            android:textColor="@color/color_fondo_azul"/>




</LinearLayout>